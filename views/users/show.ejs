<%- include('../partials/blogHeader'); -%>
<div class="back-container">
<div class="go-back">
  <i class="fas fa-long-arrow-alt-left"></i> 
  <a href="/blog">Blog</a>
</div>
</div>
<h1><%= user.name %>'s Profile</h1>
<img src="<%= user.avatar %>" alt="user's profile image" />
<h3>Posts Created:</h3>
<ul>
  <% blogs.reverse().forEach((blog) => { %>
  <li>
    <a href="/blog/<%= blog.id %>">
      <h5><i class="fas fa-feather-alt"></i> <%= blog.title %></h5>
    </a>
  </li>
  <% }); %>
</ul>
<%- include('../partials/blogFooter'); -%>
