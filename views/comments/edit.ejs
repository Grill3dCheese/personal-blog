<%- include('../partials/blogHeader'); -%>

<div>
  <p>Edit Comment</p>
  <div>
    <form
      action="/blog/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT"
      method="POST"
    >
      <div>
        <input type="text" name="comment[text]" value="<%= comment.text %>" />
      </div>
      <button>Submit</button>
    </form>
  </div>
</div>

