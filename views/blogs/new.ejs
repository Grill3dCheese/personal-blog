<%- include('../partials/blogHeader'); -%>

<section class="center-column">
  <div class="header">
    <!-- img tag w/class profile-img -->
    <div class="header-content">
      <h2>Keith McKenna 👨🏻‍💻</h2>
      <p>Full Stack Developer</p>
    </div>
  </div>
  <div class="card">
    <h1 class="new-header">Create a New Post</h1>
    <hr />
    <div class="card-body">
      <form action="/blog" method="POST" role="form">
        <fieldset>
          <div class="blog-form">
            <input
              class="form-control"
              type="text"
              name="title"
              id="title"
              placeholder="Blog Title"
            />
          </div>
          <div class="blog-form">
            <input
              class="form-control"
              type="text"
              name="entry"
              id="entry"
              placeholder="Blog Entry"
            />
          </div>
          <div class="blog-form">
            <input
              class="form-control"
              type="text"
              name="tags"
              id="tags"
              placeholder="Blog Tags"
            />
          </div>
          <button type="submit">Submit</button>
        </fieldset>
      </form>
    </div>
  </div>
</section>

<%- include('../partials/blogFooter'); -%>
